<%
#
# The following values used by the layout can be set by controllers:
#
# title
# header
# body_class
# nav
# breadcrumbs
# sidebar
-%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= yield :title || DEFAULT_PAGE_TITLE %></title>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta name="robots" content="noindex, nofollow" />
  <style type="text/css" media="screen">
  /*<![CDATA[*/
  @import'/css/master.css';<% # [IMPORTANT]: this syntax allows us to exclude IE < 5.5 -%>
  /*]]>*/
  </style>
<!--[if lt IE 7]>
<![if gte IE 5.5]>
  <link rel="stylesheet" type="text/css" href="/css/fixes_old_ie.css" />
<![endif]>
<![endif]-->
</head>
<body<%= yield :body_class%>>
  <div id="container" class="selfclear">
    <div id="header">
       <%= (yield :nav) || render(:partial => 'shared/nav') %>
    </div><!-- /header -->
    <div id="main" class="selfclear">
      <div id="content">
        <%= (yield :breadcrumbs) -%>
        <%= render :partial => 'shared/flash_messages' %>
<%= yield -%>
      </div><!-- /content -->
	    <%= (yield :sidebar) || render(:partial => 'shared/sidebar') %><% # [TODO] leaving off the render would allow us to suppress the sidebar on some pages - is that something we want? %>
  </div><!-- /container -->
</body>
</html>